{
	"name": "MDTools",
	"description": "Text replacement functions and ASCII Art for Markdown",
	"version": "0.1.3",
	"publisher": "seanmcbreen",
	"categories":[
		"Other"
	],
	"license":"SEE LICENSE IN LICENSE.md",
	"icon": "images/MDToolsIcon.svg",
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-MDTools/issues"
	},
	"homepage": "https://github.com/Microsoft/vscode-MDTools/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-MDTools.git"
	},
	"galleryBanner" : {
		"color": "#5c2d91",
		"theme" : "dark"
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"engines": {
		"vscode": "0.10.x"
	},
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.textFunctions",
				"title": "Text Functions",
				"description": "Text functions on selections"
			}
		],
		"keybindings": [
			{
				"command": "extension.textFunctions",
				"key": "Alt+T"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"dependencies": {
		"underscore.string": "^3.2.2",
		"figlet": "^1.1.1"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	}
}